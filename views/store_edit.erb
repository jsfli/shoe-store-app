<h3>Edit <%=@store.name%></h3>

<form id="edit_store" action="/stores/<%= @store.id() %>/edit" method="post" class="form-group">
  <input name="_method" type="hidden" value="patch">
  <input type="hidden" name="store_id" id="store_id" value="<%= @store.id() %>">
  <label class="control-label" for="focusedInput">Update Store Name: </label>
  <input type="text" name="name" id="name">
  <button class="btn btn-success"type="submit">Update</button>
</form>
